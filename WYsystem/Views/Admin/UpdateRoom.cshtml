@model WYsystem.Models.w_room_info
@{
    ViewBag.Title = "団地情報編集";
    Layout = "~/Views/Shared/_BackAdmin.cshtml";
}


<div class="container-fluid">
    <div class="row cm-fix-height">
        <div class="col-sm-12">
            <div class="panel panel-default">

                <div class="panel-body">
                    <h3>団地基本情報編集</h3>
                    <form action="/Admin/UpdateRoom" method="post" onsubmit="return checkForm()">

                        <table class="table table-bordered" style="margin-top:10px;">

                            <tr>
                                <th style="text-align:right;">団地名称：</th>
                                <td>
                                    <input type="hidden" name="id" value="@Model.id" />
                                    <input type="text" name="name" value="@Model.name" class="form-control" placeholder="団地名称を入力してください。" />
                                </td>
                                <th style="text-align:right;"> 連絡先：</th>
                                <td>
                                    <input type="text" name="phone" value="@Model.phone" class="form-control" placeholder="連絡先を入力してください。" />
                                </td>
                            </tr>
                            <tr>
                                <th style="text-align:right;">責任者：</th>
                                <td>
                                    <input type="text" name="link_name" value="@Model.link_name" class="form-control" placeholder="責任者を入力してください。" />
                                </td>
                                <th style="text-align:right;"> 駐車場面積：</th>
                                <td>
                                    <input type="text" name="stop_car_area" value="@Model.stop_car_area" class="form-control" placeholder="駐車場面積を入力してください。" />
                                </td>
                            </tr>
                            <tr>
                                <th style="text-align:right;">建築日付：</th>
                                <td>
                                    <input type="text" name="construct_date" value="@Model.construct_date" class="form-control" placeholder="建築日付を入力してください。" />
                                </td>
                                <th style="text-align:right;"> 道路面積：</th>
                                <td>
                                    <input type="text" name="road_area" value="@Model.road_area" class="form-control" placeholder="道路面積を入力してください。" />
                                </td>
                            </tr>
                            <tr>
                                <th style="text-align:right;">建築面積：</th>
                                <td>
                                    <input type="text" name="room_area" value="@Model.room_area" class="form-control" placeholder="建築面積を入力してください。" />
                                </td>
                                <th style="text-align:right;"> 緑化面積：</th>
                                <td>
                                    <input type="text" name="lh_area" value="@Model.lh_area" class="form-control" placeholder="緑化面積を入力してください。" />
                                </td>
                            </tr>
                            <tr>
                                <th style="text-align:right;">建物棟数：</th>
                                <td>
                                    <input type="text" name="room_number" value="@Model.room_number" class="form-control" placeholder="建物棟数を入力してください。" />
                                </td>
                                <th style="text-align:right;"> 団地アドレス：</th>
                                <td>
                                    <input type="text" name="address" value="@Model.address" class="form-control" placeholder="団地アドレスを入力してください。" />
                                </td>
                            </tr>
                            <tr>
                                <th style="text-align:right;">団地説明：</th>
                                <th colspan="3">
                                    <input type="text" name="remark" value="@Model.remark" class="form-control" placeholder="団地説明を入力してください。" />
                                </th>
                            </tr>
                            <tr>
                                <th colspan="4" style="text-align:center;">
                                    <input type="submit" class="btn btn-default" value="保存" />
                                    <input type="button" class="btn btn-default" onclick="javascript: window.history.back();" value="戻る" />
                                    <h3 style="color:red;">@ViewBag.notice</h3>
                                </th>
                            </tr>
                        </table>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    function checkForm() {
        if ($('[name="name"]').val().length < 1) {
            alert("団地名称を入力してください。");
            $('[name="name"]').focus();
            return false;
        }
        if ($('[name="phone"]').val().length < 1) {
            alert("連絡先を入力してください。");
            $('[name="phone"]').focus();
            return false;
        }
        if ($('[name="address"]').val().length < 1) {
            alert("アドレスを入力してください。");
            $('[name="address"]').focus();
            return false;
        }

    }
</script>
