@model IEnumerable<WYsystem.Models.w_system_params>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_BackAdmin.cshtml";
}

<div class="container-fluid">
    <div class="row cm-fix-height">
       
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading"> <h2>システム管理</h2></div>
                <div class="panel-body">
                    <!--数据提交到自己本身 自己请求自己-->
                    <form action="" method="get">
                        <div class="row">
                            <div class="col-md-4" style="text-align:right;line-height:30px;">
                                パラメータを選択してください。
                            </div>
                            <div class="col-md-2">
                                <select name="type" class="form-control">
                                    <option value="">全部</option>
                                    <option value="機能情報">機能情報</option>
                                    <option value="ユニット情報">ユニット情報</option>
                                    <option value="リフォーム情報">リフォーム情報</option>
                                    <option value="向き情報">向き情報</option>
                                    <option value="建物情報">建物情報</option>
                                </select>
                            </div>
                            <div class="col-md-3">
                                <input type="submit" class="btn btn-primary" value="検査" />
                            </div>
                        </div>
                    </form>
                </div>


                <table class="table">
                    <thead>

                        <tr style="text-align:center">
                            <th>
                                @Html.DisplayNameFor(model => model.code)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.type)
                            </th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    @if (Model.Count() < 1)
                    {
                        <tr class="success" >
                            <th colspan="4" style="text-align:center">システムパラメータを登録してください。</th>
                        </tr>
                    }
                    @foreach (var item in Model)
                    {
                        <tr class="success" >
                            <td>
                                @Html.DisplayFor(modelItem => item.code)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.type)
                            </td>
                            <td>
                                @Html.ActionLink("編集", "Edit", new { id = item.id }) |
                                <a href="/System/DeleteConfirmed/@item.id" onclick="return confirm('削除しますか。')">削除</a>
                            </td>
                        </tr>
                    }

                </table>

                <!--パラメータ登録実行-->
                <form action="/System/Create" style="margin-top:40px;" method="post">
                    <table class="table">
                        <tr>
                            <td align="right">
                                ソース:
                            </td>
                            <td>
                                <input class="form-control" name="code" required placeholder="ソースを入力してください。" />
                            </td>
                        </tr>
                        <tr>
                            <td align="right">
                                名称:
                            </td>
                            <td>
                                <input class="form-control" name="name" required placeholder="名称を入力してください。" />
                            </td>
                        </tr>
                        <tr>
                            <td align="right">
                                タイプ:
                            </td>
                            <td>
                                <select name="type" class="form-control">
                                    <option value="機能情報">機能情報</option>
                                    <option value="ユニット情報">ユニット情報</option>
                                    <option value="リフォーム情報">リフォーム情報</option>
                                    <option value="向き情報">向き情報</option>
                                    <option value="建物情報">建物情報</option>
                                </select>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2" align="center">
                                <input type="submit" class="btn btn-default" value="保存" />
                            </td>
                        </tr>
                    </table>
                </form>
            </div>
        </div>
    </div>
</div>